.panel.size-panel
    p Sizes
    .cluster
        input#size-handle(
            type="range"
            min="0.25"
            max="1"
            value="0.5"
            step="0.01"
        )
        p Handles
    .cluster
        input#size-control-line(
            type="range"
            min="0"
            max="0.5"
            value="0.2"
            step="0.1"
        )
        p Control Lines
    .cluster
        input#size-curve(
            type="range"
            min="0.1"
            max="1"
            value="0.6"
            step="0.1"
        )
        p Curve